# Line endings
# Alles standaard als tekst behandelen en in de repo opslaan met LF
* text=auto eol=lf

# PowerShell scripts: op Windows is CRLF het minst gedoe
*.ps1  text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# Windows scripts
*.bat  text eol=crlf
*.cmd  text eol=crlf

# Shell scripts en config files: LF
*.sh    text eol=lf
*.bash  text eol=lf
*.zsh   text eol=lf

# Common text formats: LF
*.js    text eol=lf
*.mjs   text eol=lf
*.cjs   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.jsx   text eol=lf
*.json  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.md    text eol=lf
*.txt   text eol=lf
*.env   text eol=lf
*.toml  text eol=lf
*.ini   text eol=lf
*.conf  text eol=lf

# Git files: LF
.gitattributes text eol=lf
.gitignore     text eol=lf

# Binaries niet laten "normalizen"
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.webp  binary
*.pdf   binary
*.zip   binary
*.gz    binary
*.7z    binary
*.woff  binary
*.woff2 binary
*.exe   binary
*.dll   binary
*.pdb   binary
*.map   binary
*.mp4   binary
*.mov   binary
*.avi   binary
*.mp3   binary
*.wav   binary
