# Line endings
# Alles standaard als tekst behandelen en in de repo opslaan met LF
* text=auto eol=lf

# Windows scripts mogen CRLF
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# Shell scripts LF
*.sh   text eol=lf
*.bash text eol=lf
*.zsh  text eol=lf

# Common text formats: LF
*.js    text eol=lf
*.mjs   text eol=lf
*.cjs   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.jsx   text eol=lf
*.json  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.md    text eol=lf
*.txt   text eol=lf
*.env   text eol=lf
*.toml  text eol=lf
*.ini   text eol=lf
*.conf  text eol=lf
*.svg   text eol=lf

# Git files: LF
.gitattributes text eol=lf
.gitignore     text eol=lf

# Binaries niet laten normalizen
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.webp  binary
*.bmp   binary
*.tif   binary
*.tiff  binary

*.pdf   binary

*.zip   binary
*.gz    binary
*.7z    binary
*.rar   binary
*.tar   binary

*.woff  binary
*.woff2 binary
*.ttf   binary
*.otf   binary
*.eot   binary

*.exe   binary
*.dll   binary
*.pdb   binary

*.mp4   binary
*.mov   binary
*.avi   binary
*.mkv   binary
*.webm  binary
*.mp3   binary
*.wav   binary
*.flac  binary
