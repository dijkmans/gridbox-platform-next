# Line endings
* text=auto eol=lf

# PowerShell scripts: CRLF op Windows is ok
*.ps1  text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# Windows scripts
*.bat  text eol=crlf
*.cmd  text eol=crlf

# Shell scripts en config files: LF
*.sh    text eol=lf
*.bash  text eol=lf
*.zsh   text eol=lf

# Common text formats: LF
*.js    text eol=lf
*.mjs   text eol=lf
*.cjs   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.jsx   text eol=lf
*.json  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.md    text eol=lf
